{
  "compilerOptions": {
    "target": "ES6", /* Target ECMAScript version 6 for emitted JavaScript */
    "module": "commonjs", /* Specify module code generation as CommonJS */
    "outDir": "./dist", /* Output directory for the compiled JavaScript */
    "esModuleInterop": true, /* Enable compatibility for importing CommonJS modules */
    "resolveJsonModule": true,
    "strict": true, /* Enable all strict type-checking options */
    "skipLibCheck": true, /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true, /* Ensure consistent casing in file names for imports */
    "moduleResolution": "node", /* Use Node-style module resolution */
    "baseUrl": "./src", /* Base directory for non-relative module imports */
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ] /* Add support for custom types in src/types */
    }
  },
  "include": [
    "src/**/*" /* Include all files in the 'src' directory */
  ]
}